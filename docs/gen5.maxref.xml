	<!--MESSAGES-->
	<methodlist>
		<method name="bang">
			<arglist />
			<digest>
				Compute output data
			</digest>
			<description>
				Output a list of index/amplitude pairs that you can <o>peek~</o> into a <o>buffer~</o> to use with <o>wave~</o>.
			</description>
		</method>
		<method name="list">
			<arglist>
				<arg name="ARG_NAME_0" type="list" optional="0" />
			</arglist>
			<digest>
				Index-amplitude pairs
			</digest>
			<description>
				Provide a list of amplitudes and distances for breakpoint function (total distances shouldn't exceed the size of the table). This uses an exponential interpolation so never use a target time of 0.0 as you can't exponentially interpolate to 0.0 correctly.
			</description>
		</method>
		<method name="offset">
			<arglist>
				<arg name="ARG_NAME_0" type="int" optional="0" />
			</arglist>
			<digest>
				Buffer size offset
			</digest>
			<description>
				TEXT_HERE
			</description>
		</method>
		<method name="rescale">
			<arglist>
				<arg name="ARG_NAME_0" type="int" optional="0" />
			</arglist>
			<digest>
				Turn rescaling on/off
			</digest>
			<description>
				Turn rescaling on or off with <m>rescale 0</m> or <m>rescale 1</m>. By default, the array is rescaled to fit between -1 and 1.
			</description>
		</method>
		<method name="size">
			<arglist>
				<arg name="ARG_NAME_0" type="int" optional="0" />
			</arglist>
			<digest>
				Buffer size
			</digest>
			<description>
				Set the wavetable buffer size. Default is 512.
			</description>
		</method>
	</methodlist>
